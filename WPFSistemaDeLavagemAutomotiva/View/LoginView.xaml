      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFSistemaDeLavagemAutomotiva.View"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1080"
      Title="LoginView">

    <Border Background="#1c1c1c" CornerRadius="20">
        <Grid>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Login" VerticalAlignment="Center" Width="191" FontSize="72" Foreground="#FFECEFF1" BorderBrush="#FF1C1C1C" Background="#FF1C1C1C"/>

        </Grid>
    </Border>
</Page>
