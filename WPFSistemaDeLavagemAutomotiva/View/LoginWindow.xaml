<Window x:Class="WPFSistemaDeLavagemAutomotiva.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSistemaDeLavagemAutomotiva.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="500" Width="400" Background="#1C1C1C" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <StackPanel Height="Auto">
        <TextBlock Text="Login" FontSize="30" Margin="15,15,15,75" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"></TextBlock>

        <StackPanel>
            <TextBlock Text="Usuário" Foreground="White" Margin="15,10,0,2"/>
            <TextBox x:Name="txtUsuario" Background="#1C1C1C" Foreground="White"  Margin="15,0,15,30"
         BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Text=""/>
            <TextBlock Text="Senha" Foreground="White" Margin="15,10,0,2"/>
            <PasswordBox x:Name="txtSenha" Background="#1C1C1C" Foreground="White" Margin="15,0,15,15"
BorderBrush="#CCCCCC" BorderThickness="1" Padding="5"/>

            <!-- Botão Entrar -->
            <Button x:Name="btnEntrar" 
                Content="Entrar"
                FontWeight="Bold"
                Margin="0,20,0,0"
                Padding="10"
                Width="200"
                Cursor="Hand"
                Height="30" Click="btnEntrar_Click"  
>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Text="Não é um membro?" Foreground="White" FontSize="12" FontWeight="SemiBold" Margin="0,40,0,2" HorizontalAlignment="Center"/>
            <Button x:Name="btnRegistrar" 
                Content="Registrar-se"
                FontWeight="SemiBold"
                Margin="0,0,0,0"
                Padding="10"
                FontSize="10"
                Width="110"
                Cursor="Hand"
                Height="25" Click="btnRegistrar_Click_1"  
>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="OrangeRed"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </StackPanel>
</Window>
