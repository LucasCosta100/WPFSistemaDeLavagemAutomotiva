<Window x:Class="WPFSistemaDeLavagemAutomotiva.View.EditarAgendamentoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:converters="clr-namespace:WPFSistemaDeLavagemAutomotiva.Converters"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Agendamento"
        Height="450"
        Width="400"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:TimeSpanParaStringConversor x:Key="TimeSpanParaStringConversor"/>
    </Window.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

        <!-- Título -->
        <TextBlock Text="Editar Agendamento"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Nome do Serviço -->
        <TextBlock Text="Nome do Serviço" Foreground="#333333" Margin="0,5,0,2"/>
        <ComboBox x:Name="cbServicos"
          Background="White"
          Foreground="#333333"
          BorderBrush="#CCCCCC"
          Padding="5"
          SelectedValue="{Binding ServicoAgendado.IdServico}">
            <ComboBoxItem Content="Pendente"/>
            <ComboBoxItem Content="Em Andamento"/>
            <ComboBoxItem Content="Concluído"/>
            <ComboBoxItem Content="Cancelado"/>
        </ComboBox>
        
        <!-- Data e Hora -->
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Data do Agendamento" Foreground="#333333" Margin="0,0,0,2"/>
                <DatePicker x:Name="dpData" Background="White" Foreground="#333333"
                            BorderBrush="#CCCCCC" SelectedDateFormat="Short" SelectedDate="{Binding DataAgendada}"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Hora do Agendamento" Foreground="#333333" Margin="0,0,0,2"/>
                <TextBox x:Name="txtHora" Background="White" Foreground="#333333"
                         BorderBrush="#CCCCCC" BorderThickness="1" Padding="5"
                         Text="{Binding HoraAgendamento, Converter={StaticResource TimeSpanParaStringConversor}}"
                         />
            </StackPanel>
        </Grid>

        <!-- Status -->
        <TextBlock Text="Status do Serviço" Foreground="#333333" Margin="0,10,0,2"/>
        <ComboBox x:Name="cbStatus"
                  Background="White"
                  Foreground="#333333"
                  BorderBrush="#CCCCCC"
                  Padding="5"
                  SelectedValue="{Binding StatusServico}">
            <ComboBoxItem Content="Pendente"/>
            <ComboBoxItem Content="Em Andamento"/>
            <ComboBoxItem Content="Concluído"/>
            <ComboBoxItem Content="Cancelado"/>
        </ComboBox>

        <!-- Valor -->
        <TextBlock Text="Valor Total (R$)" Foreground="#333333" Margin="0,10,0,2"/>
        <TextBox x:Name="txtValor" Background="White" Foreground="#333333"
                 BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Text="{Binding ValorTotal}"/>

        <!-- Botão Salvar -->
        <Button x:Name="btnSalvar" 
                Content="Salvar"
                FontWeight="Bold"
                Margin="0,20,0,0"
                Padding="10"
                Width="200"
                Cursor="Hand"
                Height="30"
                Click="Salvar_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#4CAF50"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#45A049"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </StackPanel>

</Window>
