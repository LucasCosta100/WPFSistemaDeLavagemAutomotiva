            </ListBox>

        </Grid>

        <Grid>
            <Frame x:Name="frameTabelas" Margin="50,672,50,50" NavigationUIVisibility="Hidden" Background="#1C1C1C"/>
        </Grid>

    </Grid>
</Page>
