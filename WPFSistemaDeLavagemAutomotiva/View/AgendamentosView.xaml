<Page x:Class="WPFSistemaDeLavagemAutomotiva.View.AgendamentosView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFSistemaDeLavagemAutomotiva.View.Components"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AgendamentosView">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly"
                  Background="#1C1C1C">
        <Grid Background="#1C1C1C">

            <Grid Margin="50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"  Text="Agendamentos" FontSize="35" Height="Auto" FontWeight="Bold" Foreground="#ECEFF1" Margin="10,10,0,5"/>
            </Grid>

            <!--Conteúdo para os 3 blocos de informações-->
            <Grid Width="Auto" Height="380" VerticalAlignment="Top" Margin="50,150,50,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="60"/>
                    <!-- Espaço -->
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                    <!-- Espaço -->
                </Grid.ColumnDefinitions>
                <!--Adicionei o Border para os quadrados atrás e um StackPanel pois o Border aceita apenas 1 filho-->
                <Border Grid.Column="0" Background="#026ADE" CornerRadius="15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Próximo Agendamento" Foreground="#ECEFF1" FontSize="20" FontWeight="Bold" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20,20,20,50"/>
                        <TextBlock x:Name="txtNome" Text="" Foreground="#ECEFF1" FontSize="30" FontWeight="SemiBold" FontFamily="Arial" Margin="15,0,0,0"/>
                        <TextBlock x:Name="txtData" Text="" Foreground="#ECEFF1" FontSize="20" FontWeight="Normal" FontFamily="Arial" Margin="15,0,0,0"/>
                        <TextBlock x:Name="txtServico" Text="" Foreground="#ECEFF1" FontSize="20" FontWeight="Normal" FontFamily="Arial" Margin="15,0,0,25"/>
                        <TextBlock FontSize="30" FontFamily="Arial" Margin="15,0,0,0">
                    <Run x:Name ="txtTextoValor" Text="" Foreground="#ECEFF1"/>
                    <Run x:Name="txtValor" Text="" Foreground="#FFA726"/>
                        </TextBlock>

                        <!-- 🔸 StackPanel horizontal para os botões -->
                        <StackPanel x:Name="spBotoes" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,70,15,25">
                            <Button Content="Confirmar" 
                            Width="120" Height="40" 
                            Margin="0,0,10,0"
                            Background="Green" 
                            Foreground="#ECEFF1"
                            FontWeight="Bold"
                            BorderBrush="Transparent"
                            Cursor="Hand">
                            </Button>

                            <Button Content="Cancelar" 
                            Width="120" Height="40"
                            Background="Red"
                            Foreground="#ECEFF1"
                            FontWeight="Bold"
                            BorderBrush="Transparent"
                            Cursor="Hand"/>
                        </StackPanel>

                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="#026ADE" CornerRadius="15">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Agendamentos para Hoje" Foreground="#ECEFF1" FontSize="30" FontWeight="Bold" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20,30,20,50"/>
                        <TextBlock x:Name="txtAgendamentosHoje" Text="" Foreground="#FFA726" FontSize="60" FontWeight="Bold" FontFamily="Arial" Margin="0,0,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="4" Background="#026ADE" CornerRadius="15">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Total de Agendamentos" Foreground="#ECEFF1" FontSize="30" FontWeight="Bold" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,50"/>
                        <TextBlock x:Name="txtAgendamentos" Text="" Foreground="#FFA726" FontSize="60" FontWeight="Bold" FontFamily="Arial" Margin="0,0,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Width="Auto" Height="100" Margin="50,200,50,50" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox x:Name="lbTabelas" Grid.Column="0" SelectionMode="Single" SelectionChanged="lbTabelas_SelectionChanged" Background="#1C1C1C" BorderBrush="Gray" BorderThickness="0,0,0,1" VerticalAlignment="Center">
                    <!-- Define o painel de itens como um StackPanel horizontal -->
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <!-- Adiciona os botões de navegação -->
