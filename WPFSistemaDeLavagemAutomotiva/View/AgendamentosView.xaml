<Page x:Class="WPFSistemaDeLavagemAutomotiva.View.AgendamentosView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFSistemaDeLavagemAutomotiva.View.Components"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AgendamentosView">

    <Grid Background="#1C1C1C">

        <Grid Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"  Text="Agendamentos" FontSize="35" Height="Auto" FontWeight="Bold" Foreground="#ECEFF1" Margin="10,10,0,5"/>
        </Grid>

        <!--Conteúdo para os 3 blocos de informações-->
        <Grid Width="Auto" Height="380" VerticalAlignment="Top" Margin="50,150,50,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="60"/>
                <!-- Espaço -->
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="60"/>
                <!-- Espaço -->
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!--Adicionei o Border para os quadrados atrás e um StackPanel pois o Border aceita apenas 1 filho-->
            <Border Grid.Column="0" Background="#026ADE" CornerRadius="15" Padding="15">
                <StackPanel>
                    <TextBlock Text="Próximo Agendamento" Foreground="#ECEFF1" FontSize="16" FontWeight="Normal" FontFamily="Arial" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,20,50"/>
                    <TextBlock Text="João Alexandre da Costa" Foreground="#ECEFF1" FontSize="30" FontWeight="SemiBold" FontFamily="Arial" Margin="15,0,0,0"/>
                    <TextBlock Text="15/06/2024 - 14:30" Foreground="#ECEFF1" FontSize="20" FontWeight="Normal" FontFamily="Arial" Margin="15,0,0,0"/>
                    <TextBlock Text="Serviço: Lavagem Completa" Foreground="#ECEFF1" FontSize="20" FontWeight="Normal" FontFamily="Arial" Margin="15,0,0,25"/>
                    <TextBlock FontSize="30" FontFamily="Arial" Margin="15,0,0,0">
                        <Run Text="Valor Total: " Foreground="#ECEFF1"/>
                        <Run Text="R$ 3.750,00" Foreground="#FFA726"/>
                    </TextBlock>

                    <!-- 🔸 StackPanel horizontal para os botões -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,70,15,25">
                        <Button Content="Confirmar" 
                                Width="120" Height="40" 
                                Margin="0,0,10,0"
                                Background="Green" 
                                Foreground="#ECEFF1"
                                FontWeight="Bold"
                                BorderBrush="Transparent"
                                Cursor="Hand">
                        </Button>

                        <Button Content="Cancelar" 
                                Width="120" Height="40"
                                Background="Red"
                                Foreground="#ECEFF1"
                                FontWeight="Bold"
                                BorderBrush="Transparent"
                                Cursor="Hand"/>
                    </StackPanel>

                </StackPanel>
            </Border>
            <Border Grid.Column="2" Background="#026ADE" CornerRadius="15">

            </Border>
            <Border Grid.Column="4" Background="#026ADE" CornerRadius="15">

            </Border>
        </Grid>

        <Grid Width="Auto" Height="100" Margin="50,200,50,50" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="lbTabelas" Grid.Column="0" SelectionMode="Single" SelectionChanged="lbTabelas_SelectionChanged" Background="#1C1C1C" BorderBrush="Gray" BorderThickness="0,0,0,1" VerticalAlignment="Center">
                <!-- Define o painel de itens como um StackPanel horizontal -->
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <!-- Adiciona os botões de navegação -->
                <local:NavButton NavLink="" IconFill="#28a745" Foreground="#28a745" HoverFill="#28a745" SelectedFill="#28a745" NavText="Conclúido" FontWeight="Bold" Margin="3,40,3,0" Padding="6,6,6,0" Width="130" Height="40" Icon="M379.33-244 154-469.33 201.67-517l177.66 177.67 378.34-378.34L805.33-670l-426 426Z"/>
