<Window x:Class="WPFSistemaDeLavagemAutomotiva.View.EditarServicosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSistemaDeLavagemAutomotiva.View"
        mc:Ignorable="d"
        Title="EditarServicosView"
        Height="350"
        Width="400"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"
        >

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
        <!-- Título -->
        <TextBlock Text="Editar Serviço"
           FontSize="20"
           FontWeight="Bold"
           Foreground="#333333"
           Margin="0,0,0,20"
           HorizontalAlignment="Center"/>

        <!-- Nome -->
        <TextBlock Text="Nome do Serviço" Foreground="#333333" Margin="0,10,0,2"/>
        <TextBox x:Name="txtNome" Background="White" Foreground="#333333"
                 BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Text=""/>

        <!-- Valor -->
        <TextBlock Text="Valor do Serviço" Foreground="#333333" Margin="0,10,0,2"/>
        <TextBox x:Name="txtValor" Background="White" Foreground="#333333"
               BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Text=""/>

        <!-- Botão Salvar -->
        <Button x:Name="btnSalvar" 
                Content="Salvar"
                FontWeight="Bold"
                Margin="0,20,0,0"
                Padding="10"
                Width="200"
                Cursor="Hand"
                Height="30" Click="btnSalvar_Click" 
>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#4CAF50"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#45A049"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </StackPanel>

</Window>
